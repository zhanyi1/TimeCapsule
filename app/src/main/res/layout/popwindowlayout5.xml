<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="@drawable/eventbg"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/eventbg2">

        <ImageButton
            android:id="@+id/cancel"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:gravity="left"
            android:paddingStart="10dp"
            android:src="@drawable/cancel" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Your Event"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/parentScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="0.5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="11">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:text="Capsule Type"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:typeface="serif" />

                    <TextView
                        android:id="@+id/type_t"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:clickable="true"
                        android:gravity="center"
                        android:paddingLeft="20dp"
                        android:text="None"
                        android:textColor="#4E4D4D"
                        android:textSize="18sp"
                        android:typeface="serif" />
                    

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="0.5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:text="Details"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:typeface="serif" />

                    <TextView
                        android:id="@+id/details"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="0.5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="11">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:text="Title:"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:typeface="serif" />

                    <TextView
                        android:gravity="center_vertical"
                        android:text="Title"
                        android:id="@+id/title_t"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:layout_marginBottom="0.5dp"
                        android:background="@null"
                        android:clickable="true"
                        android:paddingLeft="10dp"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:typeface="serif"
                        android:focusable="true" />



                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="0.5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="11">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:text="Location"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:typeface="serif" />

                    <TextView
                        android:gravity="center_vertical"
                        android:id="@+id/location_t"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="0.5dp"
                        android:layout_weight="8"
                        android:background="@null"
                        android:clickable="true"
                        android:paddingLeft="10dp"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:typeface="serif"
                        android:focusable="true" />
                    
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="0.5dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="11">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:text="Date"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:typeface="serif" />

                    <TextView
                        android:id="@+id/date_t"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:clickable="true"
                        android:gravity="center"
                        android:paddingLeft="20dp"
                        android:text="None"
                        android:textColor="#4E4D4D"
                        android:textSize="18sp"
                        android:typeface="serif" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/start_1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="0.5dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#0C03A9F4"
                    android:orientation="horizontal"
                    android:weightSum="11">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:text="Starts"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:typeface="serif" />



                    <TextView
                        android:id="@+id/start_t"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:clickable="true"
                        android:gravity="center"
                        android:paddingLeft="20dp"
                        android:text="None"
                        android:textColor="#4E4D4D"
                        android:textSize="18sp"
                        android:typeface="serif" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/end_1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="0.5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#0C03A9F4"
                    android:orientation="horizontal"
                    android:weightSum="11">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:text="Ends"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:typeface="serif" />


                    <TextView
                        android:id="@+id/end_t"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:clickable="true"
                        android:gravity="center"
                        android:paddingLeft="20dp"
                        android:text="None"
                        android:textColor="#4E4D4D"
                        android:textSize="18sp"
                        android:typeface="serif" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="0.5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="11">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:text="Alert"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:typeface="serif" />


                    <TextView
                        android:id="@+id/alert_t"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:clickable="true"
                        android:gravity="center"
                        android:paddingLeft="20dp"
                        android:text="None"
                        android:textColor="#4E4D4D"
                        android:textSize="18sp"
                        android:typeface="serif" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="0.5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="11">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:text="Repeat"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:typeface="serif" />

                    <TextView
                        android:id="@+id/repeat_t"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:clickable="true"
                        android:gravity="center"
                        android:inputType="number"
                        android:paddingLeft="20dp"
                        android:textColor="#4E4D4D"
                        android:textSize="18sp"
                        android:typeface="serif" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="0.5dp">

                <LinearLayout
                    android:background="#FCFFDD"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="11">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:text="Location"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:typeface="serif" />

                    <TextView
                        android:id="@+id/location_t2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="0.5dp"
                        android:layout_weight="8"
                        android:background="@null"
                        android:clickable="true"
                        android:text="Completed Location"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:typeface="serif"
                        android:focusable="true" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="0.5dp">

                <LinearLayout
                    android:background="#FCFFDD"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="11">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="Completed Time"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:typeface="serif" />



                    <TextView
                        android:id="@+id/time_t"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:clickable="true"
                        android:gravity="center"
                        android:paddingLeft="20dp"
                        android:text="None"
                        android:textColor="#4E4D4D"
                        android:textSize="18sp"
                        android:typeface="serif" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <LinearLayout
                    android:background="#FCFFDD"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:text="Notes"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:typeface="serif" />

                    <EditText
                        android:id="@+id/notes"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>


</LinearLayout>
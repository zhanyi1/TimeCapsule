<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TimeCapsule" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
<!--        <item name="android:windowAnimationStyle">@style/activityAnimation</item>-->
        <item name="colorPrimary">#6CCCF8</item>
        <item name="colorPrimaryVariant">#4F009DE4</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FFF491</item>
        <item name="colorSecondaryVariant">#FACA3B</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_down</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_up</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_down</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_up</item>

    </style>

    <style name="mypopwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <item name="android:windowExitAnimation">@anim/pophidden_anim</item>
    </style>
</resources>